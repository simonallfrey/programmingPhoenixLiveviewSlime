<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="question-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :question %>
    <%= text_input f, :question %>
    <%= error_tag f, :question %>
  
    <%= label f, :answer %>
    <%= text_input f, :answer %>
    <%= error_tag f, :answer %>
  
    <%= label f, :upvotes %>
    <%= number_input f, :upvotes %>
    <%= error_tag f, :upvotes %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
